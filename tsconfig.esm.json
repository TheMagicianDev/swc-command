{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "noEmit": false
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/__test__/**/*"]
}