{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "scripts/gen.mjs"],
  "exclude": ["node-modules"]
}
